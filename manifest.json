{
  "manifest_version": 3,
  "name": "Phisher - AI URL Protection",
  "version": "1.1.0",
  "description": "Advanced AI-powered phishing detection and URL threat analysis powered by neural networks",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://phisher-backend-97nn.onrender.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Phisher - AI Security Protection",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.png", "icons/icon32.png", "icons/icon48.png", "icons/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Phishing Detector Team"
}